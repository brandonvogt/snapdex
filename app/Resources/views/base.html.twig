<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('css/remodal.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('css/remodal-default-theme.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('css/base.css') }}" />
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/jquery-3.1.1.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </head>
    <header>
        <div class="logo">
            <a href="/snapdex/"><img src="{{ asset('img/logo.png') }}"></a>
        </div>
        <div>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    {{ app.user.username }} |
                    <a href="{{ path('fos_user_security_logout') }}">
                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                    </a>
                {% else %}
                    <a href="{{ path('fos_user_security_login') }}">Log In</a> | <a href="{{ path('fos_user_registration_register') }}">Register</a>
                {% endif %}
        </div>
    </header>
    <body>
    {% block body %}
        <div class="main container remodal-bg">
        {% block menu %}
            <div class="row" style="margin-bottom: 20px;">
                <div class="col-xs-6">
                    <h1>My Dex</h1>
                    <p class="upshift"> 0 /150 </p>
                    <hr class="menu-hr" />
                </div>
                <div class="col-xs-6">
                    <h1>Gallery</h1>
                </div>
            </div>
        {% endblock %}
            
            <div class="row bottom-padding">
                {% block content %}{% endblock %}
            </div>
        </div>
    {% endblock %}
    </body>
</html>